<%- include('../partials/header') %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Memory</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Mood">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Url(Image upload from device will be soon)" required>
                    <small>Click <a href="https://www.youtube.com/results?search_query=how+to+get+image+url">here</a> for tutorial on how to copy Image urls.</small>
                </div>
                
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Having fun!!!">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
