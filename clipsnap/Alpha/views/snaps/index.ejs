<%- include('../partials/header') %>
<%if(currentUser && currentUser.isAdmin){%>
	<h2>
		Admin
	</h2>
<%}%>

 <header class="jumbotron">
         <div class="container">
             <h1> 
				 <svg id="icon" class="bi bi-image-alt" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  					<path d="M10.648 6.646a.5.5 0 01.577-.093l4.777 3.947V15a1 1 0 01-1 1h-14a1 1 0 01-1-1v-2l3.646-4.354a.5.5 0 01.63-.062l2.66 2.773 3.71-4.71z"/>
  						<path fill-rule="evenodd" d="M4.5 5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" clip-rule="evenodd"/>
				</svg>
				 Welcome To <em>ClipSnap!</em>
			 </h1>
             <p>Share your hand-picked <em>Clip-Snaps</em> from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New <em>Clips</em></a>
             </p>
			 <form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
                   <input type="text" name="search" placeholder="Snaps search..." class="form-control">
                   
               </div>
			 </form>
         </div>
</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-md-12">
             <% if(noMatch !== null) { %>
			 	<h3><%= noMatch %></h3>
			 <% } %>
         </div>
	</div>
			 
     
     <div class="row text-center" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
    </div>


<%- include('../partials/footer') %>