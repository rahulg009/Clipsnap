    <body>
		
	<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
		<div class="container-fluid">
			
		
      <a class="navbar-brand" href="/">
		  <svg id="nav-icon" class="bi bi-image-alt" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  					<path d="M10.648 6.646a.5.5 0 01.577-.093l4.777 3.947V15a1 1 0 01-1 1h-14a1 1 0 01-1-1v-2l3.646-4.354a.5.5 0 01.63-.062l2.66 2.773 3.71-4.71z"/>
  						<path fill-rule="evenodd" d="M4.5 5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" clip-rule="evenodd"/>
				</svg> <em>ClipSnap</em> </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
            <a href="/campgrounds" class="nav-link">Home</a>
          </li>
        </ul>
        <ul class="navbar-nav">
            <% if(!currentUser){ %>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                  <a href="/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                  <a href="/register" class="nav-link">Sign Up</a>
                </li>
            <% } else { %>
				<ul class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge badge-light"><%= notifications.length %></span></a>
					
					<div class="dropdown-menu" aria-labelledby="navbarDropdown">
						
						
							<% notifications.forEach(function(notification) { %>                          
                                <li class="dropdown-item" aria-labelledby="navbarDropdown">
                                    <a href="/notifications/<%= notification.id %>">
                                        <%= notification.username %> created a new Snap
                                    </a>
								</li>
                            <% }); %>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="/notifications">View past notifications</a>
						
						
					</div>
			</ul>
				
                <li class="nav-item">
                  <a href="/users/<%= currentUser.id %>" class="nav-link"><i class="fas fa-user-circle"></i> Signed In As <%= currentUser.username %></a>
                </li>
                <li class="nav-item">
                  <a href="/logout" class="nav-link">Logout</a>
                </li>
            <% } %>
        </ul>
      </div>
		</div>
    </nav>
    
	
	<div class="container">

		<% if(error && error.length > 0) { %>
         <div class="alert alert-danger" role="alert"><%=error %></div>
       <% } %>
       
       <% if(success && success.length > 0) { %>
         <div class="alert alert-success" role="alert"><%= success %></div>
       <% } %>
    </div>

	
